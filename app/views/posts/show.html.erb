<p id="notice"><%= notice %></p>

<p id="title">
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p id= "body">
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="author">
  <strong>Authored By:</strong>
  <%= @post.author.email %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
